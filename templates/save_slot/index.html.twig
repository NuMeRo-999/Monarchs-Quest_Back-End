{% extends 'base.html.twig' %}

{% block title %}SaveSlot index{% endblock %}

{% block body %}
    <h1>SaveSlot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreationDate</th>
                <th>Money</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for save_slot in save_slots %}
            <tr>
                <td>{{ save_slot.id }}</td>
                <td>{{ save_slot.creationDate ? save_slot.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ save_slot.money }}</td>
                <td>
                    <a href="{{ path('app_save_slot_show', {'id': save_slot.id}) }}">show</a>
                    <a href="{{ path('app_save_slot_edit', {'id': save_slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_save_slot_new') }}">Create new</a>
{% endblock %}
